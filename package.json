    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "markdownlint": "^0.35.0",
    "markdownlint-cli": "^0.41.0",
    "next-sitemap": "^4.2.3",
    "postcss": "^8.4.47",
    "postcss-flexbugs-fixes": "^5.0.2",
    "postcss-preset-env": "^10.0.3",
    "prettier": "^3.3.3",
    "prop-types": "^15.8.1",
    "rimraf": "^6.0.1",
    "stylelint": "^16.9.0",
    "stylelint-config-standard": "^36.0.1",
    "tailwindcss": "^3.4.11"
  }
